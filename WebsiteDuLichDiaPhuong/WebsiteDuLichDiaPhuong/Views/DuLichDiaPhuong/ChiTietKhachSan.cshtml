@model WebsiteDuLichDiaPhuong.Models.KHACHSAN

@{
    ViewBag.Title = "Chi tiết khách sạn";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}
<h2 style="margin-left: 90px; color: orange">Chi tiết khách sạn</h2>
<h2 style="text-align: center; color: cornflowerblue; padding-top: 40px; text-transform: uppercase"> @Model.TenKS </h2>
<div class="container-fluid pt-5">
    <p style="color: black; text-align: justify; padding-top: 10px; margin-left: 80px"><span style="font-weight: bold">Địa chỉ:</span> @Model.DiaChi </p>
    <p style="color: black; text-align: justify; padding-top: 10px; margin-left: 80px"><span style="font-weight: bold">Số điện thoại: </span> @Model.SĐT </p>
    <a href="#" class="cat-img position-relative overflow-hidden mb-3 d-flex justify-content-center">
        <img class="img-fluid " src="~/Images/@Model.HINHANH.TenHinhAnh" style="max-width: 70%; padding-top: 10px; margin-left: 80px" alt="">
    </a>
</div>


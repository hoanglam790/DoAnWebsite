@model IEnumerable<WebsiteDuLichDiaPhuong.Models.KHACHSAN>
@{
    ViewBag.Title = "KhachSan";
    Layout = "~/Views/Shared/_LayoutNguoiDung.cshtml";
}

<br />
<h2 style="font-family: Arial; text-align: center; "><strong>KHÁCH SẠN</strong></h2>
<div class="container-fluid pt-5">
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            <div style="padding-right: 60px" class="col-lg-4 col-md-6 pb-1">
                <div class="cat-item d-flex flex-column border mb-4" style="padding: 20px">
                    <p class="text-center" style="text-transform: uppercase"> <strong>@item.TenKS</strong> </p>
                    <a href="@Url.Action("ChiTietKhachSan", "DuLichDiaPhuong", new {id = item.MaKS})" class="cat-img position-relative overflow-hidden mb-3">
                        <img class="img-fluid" src="~/Images/@item.HINHANH.TenHinhAnh" style="width: 400px; height: 250px" alt="">
                    </a>
                </div>
            </div>
        }
    </div>
</div>


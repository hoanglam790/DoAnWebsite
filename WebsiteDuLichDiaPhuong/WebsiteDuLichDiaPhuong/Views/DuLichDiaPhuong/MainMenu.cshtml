@model IEnumerable<WebsiteDuLichDiaPhuong.Models.TINTUC>

<div class="row px-xl-5 pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 pb-1">
            <div class="cat-item d-flex flex-column border mb-4" style="padding: 30px;">
                <p style="font-weight: bold" class="text-center">@item.TieuDe</p>
                <a href="@Url.Action("ChiTietTinTuc", "DuLichDiaPhuong", new {id = item.MaTinTuc})" class="cat-img position-relative overflow-hidden mb-3">
                    <img class="img-fluid" src="~/Images/@item.HINHANH.TenHinhAnh" style="width: 400px; height: 250px" alt="">
                </a>
                <p class="text-center"><strong>Ngày cập nhật: </strong>@item.NgayCapNhat</p>
            </div>
        </div>
    }
</div>

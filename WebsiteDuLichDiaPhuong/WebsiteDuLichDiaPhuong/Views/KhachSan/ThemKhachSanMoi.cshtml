@model WebsiteDuLichDiaPhuong.Models.KHACHSAN

@{
    ViewBag.Title = "ThemKhachSanMoi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="padding-top: 30px; margin-left: 25px">THÊM KHÁCH SẠN MỚI</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


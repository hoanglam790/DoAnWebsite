@model WebsiteDuLichDiaPhuong.Models.KHACHSAN

@{
    ViewBag.Title = "XoaKhachSan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÓA THÔNG TIN KHÁCH SẠN</h2>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Tên khách sạn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKS)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SĐT)
        </dd>

        <dt>
            Tên huyện
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HUYEN.TenHuyen)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-warning" />
            @Html.ActionLink("Quay về", "DanhSachKhachSan", "KhachSan", new { @class = "btn btn-danger" })
        </div>
    }
</div>

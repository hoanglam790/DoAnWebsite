@model WebsiteDuLichDiaPhuong.Models.NHAHANG

@{
    ViewBag.Title = "Xóa thông tin nhà hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="padding-top: 30px; margin-left: 25px">XÓA THÔNG TIN</h2>

<h3 style="padding-top: 30px; margin-left: 25px">Bạn có chắc chắn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Tên nhà hàng:
        </dt>

        <dd style="padding-top: 15px; margin-left: 25px">
            @Html.DisplayFor(model => model.TenNhaHang)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Địa chỉ:
        </dt>

        <dd style="text-align: justify; padding-top: 15px; margin-left: 25px">
            @Html.Raw(Model.DiaChi)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Số điện thoại:
        </dt>

        <dd style="text-align: justify; padding-top: 15px; margin-left: 25px">
            @Html.Raw(Model.SDT)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="padding-top: 30px; margin-left: 25px" class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-warning" />
            @Html.ActionLink("Quay về", "DanhSachNhaHang", "Admin", new { @class = "btn btn-danger" })
        </div>
    }
</div>
@model WebsiteDuLichDiaPhuong.Models.NHAHANG

@{
    ViewBag.Title = "Chi tiết nhà hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="padding-top: 30px; margin-left: 25px">CHI TIẾT NHÀ HÀNG</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            TÊN NHÀ HÀNG:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.TenNhaHang)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            ĐỊA CHỈ:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            SỐ ĐIỆN THOẠI:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.SDT)
        </dd>

    </dl>
</div>
<p style="padding-top: 30px; margin-left: 25px">
    @Html.ActionLink("Chỉnh sửa", "SuaNhaHang", new { id = Model.MaNhaHang }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Quay về", "DanhSachNhaHang", "NhaHang", new { @class = "btn btn-danger" })
</p>
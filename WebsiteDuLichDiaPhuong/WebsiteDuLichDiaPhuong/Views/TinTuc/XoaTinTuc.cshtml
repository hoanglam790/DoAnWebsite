@model WebsiteDuLichDiaPhuong.Models.TINTUC

@{
    ViewBag.Title = "Xóa tin tức";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="padding-top: 30px; margin-left: 25px">Xóa Tin Tức</h2>

<h3 style="padding-top: 30px; margin-left: 25px">Bạn có muốn xóa không ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Hình ảnh:
        </dt>

        <dd style="padding-top: 15px; margin-left: 25px">
            <img src="@Url.Content("~/Images/" + Model.HINHANH.TenHinhAnh)" width="160px" alt="HinhAnh" />
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Thể loại:
        </dt>

        <dd style="padding-top: 15px; margin-left: 25px">
            @Html.DisplayFor(model => model.THELOAITIN.TenTheLoai)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Tiêu Đề:
        </dt>

        <dd style="padding-top: 15px; margin-left: 25px">
            @Html.DisplayFor(model => model.TieuDe)
        </dd>

        <dt style="text-align: justify; padding-top: 15px; margin-left: 25px">
            Nội dung tin tức:
        </dt>

        <dd style="padding-top: 15px; margin-left: 25px">
            @Html.DisplayFor(model => model.NoiDungTinTuc)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="padding-top: 30px; margin-left: 25px" class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-warning" />
            @Html.ActionLink("Quay về", "DanhSachTinTuc", "TinTuc", new { @class = "btn btn-danger" })
        </div>
    }
</div>
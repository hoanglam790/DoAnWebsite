@model WebsiteDuLichDiaPhuong.Models.HINHANH

@{
    ViewBag.Title = "Xóa ảnh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="padding-top: 30px; margin-left: 25px">XÓA ẢNH</h2>

<h3 style="padding-top: 30px; margin-left: 25px">Bạn có muốn xóa ảnh này không ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Hình ảnh
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            <img src="@Url.Content("~/Images/" + Model.TenHinhAnh)" width="100px" alt="Alternate Text" />
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Mô tả hình ảnh
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.MoTaHinhAnh)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="padding-top: 30px; margin-left: 25px" class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            @Html.ActionLink("Quay lại", "DanhSachHinhAnh", "HinhAnh", new { @class = "btn btn-primary" })
        </div>
    }
</div>

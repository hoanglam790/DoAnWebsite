@model WebsiteDuLichDiaPhuong.Models.HUYEN

@{
    ViewBag.Title = "ChiTietQuanHuyen";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="padding-top: 30px; margin-left: 25px">CHI TIẾT QUẬN HUYỆN</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Tên quận/huyện:
        </dt>

        <dd style="padding-top: 15px; margin-left: 25px">
            @Html.DisplayFor(model => model.TenHuyen)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Miêu tả:
        </dt>

        <dd style="text-align: justify; padding-top: 15px; margin-left: 25px">
            @Html.Raw(Model.MieuTa)
        </dd>

    </dl>
</div>
<p style="padding-top: 10px ;margin-left: 25px">
    @Html.ActionLink("Chỉnh sửa", "SuaQuanHuyen", new { id = Model.MaHuyen }, new { @class = "btn btn-info" })
    @Html.ActionLink("Quay về", "DanhSachQuanHuyen", "Admin", new { @class = "btn btn-danger" })
</p>

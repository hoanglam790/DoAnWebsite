@model WebsiteDuLichDiaPhuong.Models.TOURDULICH

@{
    ViewBag.Title = "Chi tiết tour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="padding-top: 30px; margin-left: 25px">CHI TIẾT TOUR</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Tên tour:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.TenTour)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Miêu tả:
        </dt>

        <dd style="text-align: justify; padding-top: 15px; margin-left: 25px">
            @Html.Raw(Model.MieuTa)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Giá tiền:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.GiaTien)
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Hình ảnh:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            <img src="@Url.Content("~/Images/" + Model.HINHANH.TenHinhAnh)" width="160px" alt="HinhAnh" />
        </dd>

        <dt style="padding-top: 30px; margin-left: 25px; font-weight: bold">
            Link liên kết:
        </dt>

        <dd style="padding-top: 30px; margin-left: 25px">
            @Html.DisplayFor(model => model.DuongLink)
        </dd>

    </dl>
</div>
<p style="padding-top: 10px ;margin-left: 25px">
    @Html.ActionLink("Chỉnh sửa", "SuaTour", new { id = Model.MaTour }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Quay về", "DanhSachTour", "TourDuLich", new { @class = "btn btn-danger" })
</p>
